{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": false,
    "watch":true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es2015", "es2016", "es6", "es5"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}